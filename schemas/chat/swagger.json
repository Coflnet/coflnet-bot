  "components": {
    "schemas": {
      "ChatMessage": {
        "type": "object",
        "properties": {
          "uuid": {
            "maxLength": 32,
            "minLength": 0,
            "type": "string",
            "description": "The uuid of the sender",
            "nullable": true
          },
          "name": {
            "maxLength": 16,
            "type": "string",
            "description": "If available the name of the sender",
            "nullable": true
          },
          "prefix": {
            "type": "string",
            "description": "What color/prefix the sender has, if empty the color will be white and message should be gray",
            "nullable": true
          },
          "message": {
            "type": "string",
            "description": "Content of the message",
            "nullable": true
          },
          "clientName": {
            "type": "string",
            "description": "What client software sent this message",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": ""
      },
      "CientCreationResponse": {
        "type": "object",
        "properties": {
          "client": {
            "$ref": "#/components/schemas/ClientThing"
          },
          "apiKey": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Contains the client and its api key (only place where the api key is visible)"
      },
      "ClientThing": {
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 32,
            "type": "string",
            "description": "Uuid of the target user",
            "nullable": true
          },
          "quota": {
            "type": "integer",
            "description": "Per minute send quota",
            "format": "int32"
          },
          "contact": {
            "type": "string",
            "description": "User who is responsible for this client",
            "nullable": true
          },
          "webHook": {
            "type": "string",
            "description": "Webhook to post new messages too",
            "nullable": true
          },
          "webhookAuth": {
            "type": "string",
            "description": "Auth header value for the webhook",
            "nullable": true
          },
          "created": {
            "type": "string",
            "description": "When this was created",
            "format": "date-time"
          }
        },
        "additionalProperties": false,
        "description": "Client software capeable of sending messages"
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "slug": {
            "type": "string",
            "nullable": true
          },
          "message": {
            "type": "string",
            "nullable": true
          },
          "trace": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Mute": {
        "type": "object",
        "properties": {
          "uuid": {
            "maxLength": 32,
            "minLength": 0,
            "type": "string",
            "description": "Uuid of the target user",
            "nullable": true
          },
          "muter": {
            "maxLength": 32,
            "minLength": 0,
            "type": "string",
            "description": "Uuid of user performing the mute",
            "nullable": true
          },
          "unMuter": {
            "maxLength": 32,
            "minLength": 0,
            "type": "string",
            "description": "Uuid of user performing the mute",
            "nullable": true
          },
          "message": {
            "type": "string",
            "description": "Message for the user",
            "nullable": true
          },
          "reason": {
            "type": "string",
            "description": "Internal reason",
            "nullable": true
          },
          "clientId": {
            "type": "integer",
            "description": "What client software added the mute",
            "format": "int32"
          },
          "unMuteClientId": {
            "type": "integer",
            "description": "What client software added the mute",
            "format": "int32"
          },
          "timestamp": {
            "type": "string",
            "description": "When this was created",
            "format": "date-time"
          },
          "expires": {
            "type": "string",
            "description": "Until when this is active",
            "format": "date-time"
          },
          "status": {
            "$ref": "#/components/schemas/MuteStatus"
          }
        },
        "additionalProperties": false
      },
      "MuteStatus": {
        "enum": [
          0,
          1,
          2,
          4,
          8,
          16
        ],
        "type": "integer",
        "format": "int32"
      },
      "UnMute": {
        "type": "object",
        "properties": {
          "uuid": {
            "maxLength": 32,
            "minLength": 0,
            "type": "string",
            "description": "Uuid of the target user",
            "nullable": true
          },
          "unMuter": {
            "maxLength": 32,
            "minLength": 0,
            "type": "string",
            "description": "Uuid of user performing the mute",
            "nullable": true
          },
          "reason": {
            "type": "string",
            "description": "Internal reason",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}
